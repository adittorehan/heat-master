<% @forgot_password ||= ForgotPassword.new %>

<div class="w-full h-screen flex justify-center items-center">
  <div class="w-1/3 mb-20">
    <div class="flex-row justify-center align-center">
      <h1 class="mb-3 text-center text-3xl">Forgot your password?</h1>
      <p class="mb-5 text-center text-l px-5">
        Enter your email below and we'll send you instructions on how to reset your password.
      </p>
    </div>

    <div class="flex flex-row justify-center align-center">
      <div>
        <div class="mb-3">
          <%= flash_messages %>
        </div>

        <%= form_for @forgot_password, as: :password, url: passwords_path do |f| %>
          <%= f.email_field :email, hide_label: true, placeholder: "Email", class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>

          <%= f.submit "Send instructions", class: "w-1/2 shadow bg-gray-500 hover:bg-gray-400 focus:shadow-outline focus:outline-none text-black py-2 rounded my-6" %>
        <% end %>

        <span class="text-sm">Remember your password?</span><%= link_to "Log in", sign_in_path, class: "text-center ml-2 inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      </div>
    </div>
  </div>
</div>
