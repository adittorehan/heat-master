<div class="flex justify-between px-4 border-b">
  <div class="w-1/3">
    <%= image_tag "icons/logo.png", class: "img-fluid my-1 inline-block", width: "56" %>
    <span class="text-sm text-gray-500">
    <%= link_to current_workspace.name, workspace_projects_path(current_workspace), class: "text-sm text-gray-500 ml-2" %>
      /
      <span class="text-sm text-gray-800"><%= current_project.name %></span>
    </span>
  </div>
  <ul class="flex items-center justify-center w-1/3">
    <li class="mx-5">
      <%= link_to "Create",
                  edit_workspace_project_survey_path(current_workspace, current_project, current_project.survey),
                  class: "text-primary-500 py-2 border-b-2
                          border-white hover:text-primary-800
                          hover:border-b-2 hover:border-primary-800
                          #{'border-b-2 border-primary-800 font-bold' if controller_name == 'surveys'}" %>
    </li>
    <li class="mx-5">
      <%= link_to "Share",
                  workspace_project_survey_shares_path(current_workspace, current_project, current_project.survey),
                  class: "text-primary-500 py-2 border-b-2 border-white
                          hover:text-primary-800 hover:border-b-2
                          hover:border-primary-800
                          #{'border-b-2 border-primary-800 font-bold' if controller_name == 'shares'}" %>
    </li>
    <li class="mx-5">
      <%= link_to "Analyse",
                  workspace_project_survey_analytics_path(current_workspace, current_project, current_project.survey),
                  class: "text-primary-500 py-2 border-b-2 border-white
                          hover:text-primary-800 hover:border-b-2 hover:border-primary-800
                          #{'border-b-2 border-primary-800 font-bold' if controller_name == 'analytics' || controller_name == 'detailed_analytics'}" %>
    </li>
  </ul>

  <div class="w-1/3 flex justify-end">
    <% if current_project.survey %>
      <%= link_to "View",
                  new_workspace_project_survey_result_path(current_project.workspace, current_project, current_project.survey, @result),
                  class: "h-8 pt-1 focus:outline-none bg-gray-300 hover:bg-gray-100 text-gray-800 text-sm font-semibold my-3 px-4 border border-gray-400 rounded shadow",
                  target: "_blank" %>
    <% end %>
  </div>
</div>
