<div class=" border-b-2">
  <div class="flex justify-between mx-4 h-14">
    <div class="flex items-center w-1/3">
      <% if signed_in? %>
        <h1>
          <%= link_to current_project.name, edit_workspace_project_survey_path(current_project.workspace, current_project, current_project.survey) %>
        </h1>
      <% end %>
    </div>

    <div class="flex items-center justify-center w-1/3">
      <% unless @survey&.feedback&.active? %>
        <h1><%= @step == 6 ? "Survey completed" : "Step #{ @step } of 4" %></h1>
      <% else %>
        <h1><%= @step == 6 ? "Survey completed" : "Step #{ @step } of 5" %></h1>
      <% end %>
    </div>


    <div data-controller="micromodal" class="w-1/3 flex justify-end">
      <% if action_name == "edit" %>
        <%= link_to "Complete later", "#", data: { "micromodal-trigger": "complete_later" }, remote: true,
                    class: "h-8 pt-1 focus:outline-none my-3 px-4 bg-transparent hover:bg-primary-500 text-primary-500 text-sm font-semibold hover:text-white border border-primary-500 rounded" %>
      <% end %>
    </div>
  </div>
</div>
