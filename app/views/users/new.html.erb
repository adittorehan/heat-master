<div class="w-full h-screen flex justify-center items-center">
  <%= form_for @user, url: users_path, html: { class: "mb-32 w-1/3" } do |f| %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :first_name, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.text_field :first_name, required: true, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :last_name, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.text_field :last_name, required: true, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :email, "Email address", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.email_field :email, required: true, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.password_field :password, required: true, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
    </div>

    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3">
        <%= f.submit "Create account", class: "shadow bg-gray-500 hover:bg-gray-400 focus:shadow-outline focus:outline-none text-black py-2 px-4 rounded mb-6" %>
      </div>
    </div>

    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3 text-sm">
        <span class="mr-2">Already have an account?</span>
        <%= link_to "Sign in", sign_in_path, class: "inline-block align-baseline font-bold text-blue-500 hover:text-blue-800" %>
      </div>
    </div>
  <% end %>
</div>
