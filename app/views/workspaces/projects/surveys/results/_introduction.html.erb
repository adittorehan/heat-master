<div class="mt-20 text-center">

  <% if introduction.image.attached? %>
    <div class="flex justify-center content-center mb-3">
      <%= image_tag introduction.image, class: "w-20" %>
    </div>
  <% end %>

  <div class="mb-5">
    <h1 class="text-2xl font-bold mb-3"><%= introduction.headline %></h1>
    <p><%= introduction.subheadline %></p>
  </div>

  <div class="mb-5">
    <%= f.hidden_field :step, value: 1 %>
  </div>


  <div class="inline-flex mt-5">
    <%= f.submit "Start", class: "h-10 mr-5 w-24 cursor-pointer focus:outline-none bg-gray-300 hover:bg-gray-100 text-gray-800 text-sm font-bold my-3 px-3 border border-gray-400 rounded shadow" %>
  </div>
</div>
